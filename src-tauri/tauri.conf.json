{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "RReader",
  "version": "0.1.0",
  "identifier": "notrealreader",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "RReader",
        "width": 1280,
        "height": 720,
        "decorations": false
      }
    ],

    "security": {
      "csp": null,
      "capabilities": [
        {
          "identifier": "main-capability",
          "description": "Main window capability",
          "windows": ["main"],
          "permissions": [
            "core:default",
            "opener:default",
            "shell:default",
            "core:window:allow-minimize",
            "core:window:allow-toggle-maximize",
            "core:window:allow-close",
            "core:window:allow-start-dragging",
            "fs-capability"
          ]
        },
        {
          "identifier": "fs-capability",
          "permissions": [
            "fs:read-files",
            "fs:allow-mkdir",
            "fs:scope-appdata",
            "fs:scope-appdata-recursive"
          ]
        }
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
